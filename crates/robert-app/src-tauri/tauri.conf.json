{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Robert",
  "version": "0.1.2",
  "identifier": "com.robert",
  "build": {
    "beforeDevCommand": "bun run frontend:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run frontend:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "robert",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/robert-agent/robert-releases-canary/refs/heads/main/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4RTg2MDAzNEI0MzI1RDgKUldUWUpVTkxBMkRvcU1QNGdBZWhlVGJWb0tyQmM5UDNRQnM3ZEpDMEVyQTNPbFZJem5Mc092WGMK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
