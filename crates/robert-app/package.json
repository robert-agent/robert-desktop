{
  "name": "robert-app",
  "version": "0.1.0",
  "description": "Browser automation desktop app",
  "type": "module",
  "scripts": {
    "dev": "bunx tauri dev",
    "build": "bunx tauri build",
    "build:debug": "bunx tauri build --debug",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "frontend:dev": "vite dev",
    "frontend:build": "vite build",
    "frontend:preview": "vite preview",
    "lint": "eslint src --ext .ts,.svelte",
    "lint:fix": "eslint src --ext .ts,.svelte --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check:all": "npm run lint && npm run format && npm run check"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-updater": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-process": "^2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-plugin-svelte": "^2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
